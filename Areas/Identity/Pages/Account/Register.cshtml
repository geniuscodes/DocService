@page
@model RegisterModel
@using DocService.Models.Data.Identity

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<style>


 

    
    
</style>


<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-area="Identity" asp-page="/Account/Register" method="post">
            <h2>Sign Up</h2>
            <hr />
            @* FirstNamee *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-2">
                <label asp-for="Input.FirstName"></label>

                <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            @* LastName *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-2">
                <label asp-for="Input.LastName"></label>

                <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            @* Telephone *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-2">
                <label asp-for="Input.Telephone"></label>

                <input asp-for="Input.Telephone" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.Telephone" class="text-danger"></span>
            </div>
            @* Email*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-2">
                <label asp-for="Input.Email"></label>

                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            @* Password *@
            <div class="form-floating my-2" >
                <label asp-for="Input.Password"></label>

                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @* Confirm Password *@
            <div class="form-floating my-2">
                <label asp-for="Input.ConfirmPassword"></label>

                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating my-2">
            <input type="radio" name="rdUserRole" value="@StaticRoles.Doctor"/>@StaticRoles.Doctor
            <input type="radio" name="rdUserRole" value="@StaticRoles.Nurse"/>@StaticRoles.Nurse
            <input type="radio" name="rdUserRole" value="@StaticRoles.Admin"/>@StaticRoles.Admin
            <input type="radio" name="rdUserRole" value="@StaticRoles.Digital"/>@StaticRoles.Digital
            <input type="radio" name="rdUserRole" value="@StaticRoles.Management"/>@StaticRoles.Management
            <input type="radio" name="rdUserRole" value="@StaticRoles.Support"/>@StaticRoles.Support
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a
                            href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin"  method="post"
                class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name"
                                title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
