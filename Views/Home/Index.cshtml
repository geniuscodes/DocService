    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!-- project css file  -->
    <link rel="stylesheet" href="~/css/style.css">
     <script>
       $(document).ready(function () {
            $("#Doc").DataTable({

                "filter": true,
                "pageLength": 10,
                "autoWidth": true,
            


            });


        });

 </script>

 <style>
* {
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
}

/* Float four columns side by side */
.column {
  float: left;
  width: 25%;
  padding: 0 10px;
}

/* Remove extra left and right margins, due to padding */
.row {margin: 0 -5px;}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}



/* Style the counter cards */
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  padding: 16px;
  text-align: center;
  background-color: #fffff;
}

.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 40%;
}
</style>

</head>
<body>

<div id="ihealth-layout" class="theme-tradewind">
    
    <!-- sidebar -->
    <div class="sidebar px-4 py-4 py-md-5 me-0">
        <div class="d-flex flex-column h-100">
         
        

    <!-- main body area -->
    <div class="main px-lg-4 px-md-4">

        <!-- Body: Header -->
     
    
                    <!-- menu toggler -->
                    <button class="navbar-toggler p-0 border-0 menu-toggle order-3" type="button" data-bs-toggle="collapse" data-bs-target="#mainHeader">
                        <span class="fa fa-bars"></span>
                    </button>
    
                
    
                </div>
            </nav>
        </div>  


        <!-- Body: Body -->
        <div class="body d-flex py-3">
            <div class="container-xxl">

                <div class="row">
                      <div class="column">
                        <div class="card">
                      <img src="https://clipart.world/wp-content/uploads/2021/01/Doctor-clipart-transparent.png"
                                  class="center"   />

                                           
                                                <h6 class="mt-3 mb-0 fw-bold small-14">Total Doctors</h6>
                                                <span class="text-muted">@Html.DisplayFor(m=> m.docs)</span>
                         
 
                        </div>
                      </div>

                      <div class="column">
                        <div class="card" style="width:370px; height:250px">
                         <img src="https://media.istockphoto.com/vectors/man-patient-resting-in-hospital-bed-vector-id1137949661?k=20&m=1137949661&s=612x612&w=0&h=zrOUO3fYTUuAPCT7E5bBcyGOoDfm5jkODpkK738W4cM="
                                  class="center" />

                                           
                                                <h6 class="mt-3 mb-0 fw-bold small-14">Total Patients</h6>
                                                <span class="text-muted">@Html.DisplayFor(m=> m.patients)</span>

                        </div>
                      </div>
  
                      <div class="column">
                        <div class="card" style="width:370px; height:250px">
                         <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR9TKXruRoX_PkcKt8DlkEwL1dVHCo14sJHeWoRBZ_3bHPfSK6eiXvhpwugNIZMGRd8kTE&usqp=CAU"
                                 class="center"    />

                                           
                                                <h6 class="mt-3 mb-0 fw-bold small-14">Total Medicine</h6>
                                                <span class="text-muted">@Html.DisplayFor(m=> m.medicine)</span>
                        </div>
                      </div>
  
                      <div class="column">
                        <div class="card" style="width:370px; height:250px">
                         <img src="https://www.freevector.com/uploads/vector/preview/30523/Doctor_And_Patient.jpg"
                                    class="center"  />

                                           
                                                <h6 class="mt-3 mb-0 fw-bold small-14">Patients per Doctor</h6>
                                                <span class="text-muted">@Html.DisplayFor(m=> m.avergagePatients)</span>
                        </div>
                      </div>
                      <div class="column">
                        <div class="card" style="width:370px; height:250px">
                         <img  src="https://media.istockphoto.com/vectors/doctor-or-medical-service-conceptconcept-for-medical-app-and-websites-vector-id1205256331?k=20&m=1205256331&s=612x612&w=0&h=U_8h4FcWnebiiqMqdKSHJvmisYdFFim_UxNLP-5Bt_w= " 
                                  class="center"   />

                                           
                                                <h6 class="mt-3 mb-0 fw-bold small-14">Total Nurses</h6>
                                                <span class="text-muted">@Html.DisplayFor(m=> m.nurses)</span>
                        </div>
                      </div><div class="column">
                        <div class="card" style="width:370px; height:250px">
                         <img src=" https://thumbs.dreamstime.com/b/doctor-visiting-patient-lying-hospital-bed-african-american-doctor-visiting-patient-coma-lying-bed-hospital-114154482.jpg"
                                  class="center"    />

                                           
                                                <h6 class="mt-3 mb-0 fw-bold small-14">Total Appointments</h6>
                                                <span class="text-muted">@Html.DisplayFor(m=> m.appointments)</span>
                        </div>
                      </div>
                    </div>
             
          

                
                <div class="row g-3 mb-3">
                    <div class="col-xl-8 col-lg-20 flex-column">
                       
                       
                      
                                
                                <table id="Doc" style="border-collapse: separate" class="table table-hover align-middle mb-0 nowrap dataTable no-footer dtr-inline" role="grid" >
                            <thead style="color: black;">
                             <tr role="row" style="text-align:center;" >
                            <th class="sorting_asc" tabindex="0" aria-controls="myDataTable" rowspan="1" colspan="1" style="width: 102.2px;" aria-sort="ascending" aria-label="Patients: activate to sort column descending">
                                Patient Id
                            </th>
                             <th class="sorting" tabindex="0" aria-controls="Doc" rowspan="1" colspan="1" style="width: 301.2px;" aria-label="PatientCode: activate to sort column ascending">
                                PatientCode
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="Doc" rowspan="1" colspan="1" style="width: 81.2px;" aria-label="Progress: activate to sort column ascending">
                              FirstName
                            </th>
                            <th>
                              LastName
                            </th>
                            <th>
                               Gender
                            </th><th>
                               Phone
                            </th>
                            <th>
                               CheckUp
                            </th>
                          
                        </tr>
                    </thead>

                    <tbody style="color:black;">
                        @foreach (var item in Model.Patients)
                        {
                            <tr role="row">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                   
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatientCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirsName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td><td>
                                   (+27) @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                               
                                <td>
                                    <a asp-action="" asp-controller="" class="btn btn-primary">  CheckUp
                                       
                                    </a>
                                </td>
                    
                            </tr>
                        }

                    </tbody>

                </table>
                <div>
                            </div>
                       
                    </div>

                   
                
                     
                    </div>
                </div><!-- .row end -->
            </div>
        </div>      
      
       
    </div>
  


