@using Microsoft.AspNetCore.Identity
@using DocService.Models.Data.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<DocService.Models.Entities.Appointment>




@{
    ViewData["Title"] = "Nuers";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>


    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#Doc").DataTable({

                "filter": true,
                "scrollX": true,
                "scrollCollapse": true,
                "orderMulti": false,
                "pageLength": 5


            });


        });




    </script>







</head>

<script>
    swal({
        //Welcome user
        title: "Welcome to Portal",
        icon: "success",
        button: "Ok!"

    });
</script>





<body>
    <div class="container">
        <br />
        <div style="width:90%; margin:0 auto;">


            @* Image at Center *@
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <img src="https://www.rhcg.org.uk/media/1207/hospital-education-service.png?width=200&height=200&mode=max"
                            alt="logo" style="width:200px; height:200px;" />
                    </div>
                    <h2 class="text-center">Patient-Info
                    </h2>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <a asp-action="NewPatient" asp-controller="Patient">
                                <img src="https://icon-library.com/images/patient-icon-png/patient-icon-png-26.jpg"
                                    width="50" height="50" />

                            </a>

                        </div>
                    </div>
                </div>



                <table id="Doc"
                    class="table table-striped  table-bordered dt-responsive nowrap; border-color:green; striped-color: green; "
                    width="100%" cellspacing="0">
                    <thead style="color: green;">
                        <tr style="text-align:center;">
                            <th>
                                @Html.DisplayNameFor(model => model.PatientId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.PatientCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.FirsName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.BloodType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.DateOfBirth)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Agreement)
                            </th>
                        </tr>
                    </thead>

                    <tbody style="color:black;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Advice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.doctorId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>

                              @*  <td>
                                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Agreement)
                                </td>
*@

                            </tr>
                        }

                    </tbody>

                </table>


            </div>
        </div>
</body>

</html>





