    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#Doc").DataTable({

                "filter": true,
                "scrollX": true,
                "scrollCollapse": true,
                "orderMulti": false,
                "pageLength": 5


            });


        });




    </script>







</head>

<script>
    swal({
        //Welcome user
        title: "Welcome to Portal",
        icon: "success",
        button: "Ok!"

    });
</script>





<body>
    <div class="container">
        <br />
        <div style="width:90%; margin:0 auto;">


  

            @* Image at Center *@
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <img src="https://cdn.dribbble.com/users/2226070/screenshots/5750824/media/872b9833f42e333b8ddcea78eb58ef35.gif"
                            alt="logo" style="width:500px; height:300px;" />
                    </div>
                    <h2 class="text-center">Patient-Appointment
                    </h2>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <a asp-action="AddAppointment" asp-controller="Appointments">
                                <img src="https://th.bing.com/th/id/R.3b2e2d1e18d90d9cfca20df81172f341?rik=jbcOWj%2f3Th0d5g&pid=ImgRaw&r=0"
                                    width="250" height="100" />

                            </a>

                        </div>
                    </div>
                </div>



                <table id="Doc"
                    class="table table-striped  table-bordered dt-responsive nowrap; border-color:green; striped-color: green; "
                    width="100%" cellspacing="0">
                    <thead style="color: green;">
                        <tr style="text-align:center;">
                            <th>
                               Appointment Id 
                            </th>  <th>
                               Patient 
                            </th>
                            <th>
                              Doctor 
                            </th>
                       
                            <th>
                               AppointmentTime
                            </th>
                            <th>
                               Note
                            </th>
                            <th>
                                NextVisitDate
                            </th>
                            <th>
                                CreatedDate
                            </th>
                            
                        </tr>
                    </thead>

                    <tbody style="color:black;">
                           @foreach (var item in Model.Appointments)
                    {
                             <tr>
                                <td>
                                 
                                    
                                    <a asp-action="Details" asp-controller="Appointments"  asp-route-id="@item.Id">
                                        <i class="bi bi-person-circle">

                                        </i>@Html.DisplayFor(modelItem => item.Id)</a>
                                    
                                </td>
                                <td>
                                 
                                    @Html.DisplayFor(modelItem => item.PatientName)
                                    
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.DoctorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>

                            </tr>
                    }
                           

                    </tbody>

                </table>


            </div>
        </div>
</body>

</html>





