@model DocService.Models.DTO.AppointmentCreateDTO

@{
    ViewData["Title"] = "Create";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>New Appointmenmt</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
@* Image *@

<div class="col-md-4">
    <div class="text-center">
        <img src="https://cdn.dribbble.com/users/722246/screenshots/4400319/media/8854b69f794471a100c85577859e9c5e.gif"
            alt="logo" style="width:500px; height:300px;" />
    </div>
    <p class="text-center">Appointment
    </p>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="needs-validation" >
            <div asp-validation-summary="All" class="validate"></div>
            <div class="input-field col s6">
                <label>Appointment Date</label>
                <input asp-for="AppointmentDate" class="validate" type="date"  placeholder="AppointmentDat"/>
          <span class="helper-text" data-error="wrong" data-success="right"></span>    
            </div> <div class="input-field col s6">
                <label  asp-for="AppointmentTime" class="validation-label"></label>
                <input asp-for="AppointmentTime" class="validate" type="time"  placeholder="Time"/>
          <span class="helper-text" data-error="wrong" data-success="right"></span>    
            </div>
            <div class="input-field col s6">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div> <div class="input-field col s6">
                <label asp-for="Advice" class="control-label"></label>
                <input asp-for="Advice" class="form-control" />
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>
            <div class="input-field col s6">
                <label asp-for="PatientType" class="validation-label"></label>
                <input asp-for="PatientType" class="validate"  placeholder="PatientType"  />
          <span class="helper-text" data-error="wrong" data-success="right"></span>    
            </div>
            <div class="input-field col s6">
               
                <select asp-for="DoctorId" class ="form-control" asp-items="ViewBag.DoctorId"></select>
          <span class="helper-text" data-error="wrong" data-success="right"></span>    
                  </div>
            <div class="input-field col s6">
               <label  class="control-label"></label>
                <select asp-for="PatientId" class ="form-control" asp-items=@ViewBag.PatientId></select>
          <span class="helper-text" data-error="wrong" data-success="right"></span>    
            </div>


            <div class="input-field col s6" style="margin-top:-30px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

